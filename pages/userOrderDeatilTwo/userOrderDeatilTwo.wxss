.detail{
	background:#d9f7ff;
	border-radius:5rpx;
	overflow:hidden;
	position:relative;
	margin-top:30rpx;
}
.detail_list{
	width:100%;
	height:98rpx;
	border-bottom:solid 1px #fff;
}
.detail_left{
	width:15%;
	font-size:28rpx;
	color:#333;
}
.detail_right{
	width:85%;
	font-size:28rpx;
	color:#666;
}
.left_img{
	position:absolute;
	left:0;
	top:47%;
}
.left_img image{
	width:22rpx;
	height:44rpx;
}
.right_img{
	position:absolute;
	right:0;
	top:47%;
}
.right_img image{
	width:22rpx;
	height:44rpx;
}